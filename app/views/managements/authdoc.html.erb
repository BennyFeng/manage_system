<div id="login_head"><h1></h1></div>
<div id="login">
      <%= form_for :auth, url: "/managements/createadmin" do |f| %>
        <p>
          管理员员工编号: <%= f.text_field :username, :value=>@emp.emp_number  %>
        </p>

        <p>
          管理员登录密码: <%= f.password_field :password  %>
        </p>

        <p id="tips5"><%= cookies[:tips6] %></p>

        <p>
          <%= cookies[:hint] %>
        </p>

        <p id="login_btn">
          <%= f.submit "提交授权", data:{confirm: '确定授权吗'} %>
        </p>
      <% end %>
</div>
  <p><%= link_to "返回首页", managements_path+"?pg=1" %></p>