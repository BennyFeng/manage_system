    <script type="text/javascript">
      window.onload = function(){
        var t = null;
	dt = new Date();
	var y = dt.getFullYear();
	var mn = dt.getMonth();
	var d = dt.getDate();
	var h = dt.getHours();
	var m = dt.getMinutes();
	var s = dt.getSeconds();
				
	document.getElementById("time").innerHTML = "当前时间:"+y+"年"+mn+"月"+d+"日"+""+h+":"+m+":"+s
	t = setTimeout(time,1000)
	function time(){
	  clerTimeout(t);//清除定时器	
	  t = setTimeout(time, 1000);//设定定时器，循环执行
	}
      }
