h1{
  text-align: center;
}

#mge_head{
  float: left;
  width: 98%;
  height: 20%;
  margin: 1% auto;
  background:{
    color: lightgreen;
  }
}

#mge_left{
  width: 15%;
  height: 75%;
  margin: 1% 0;
  background:{
    color: lightgreen;
  }
  float: left;
  word-wrap: break-word;
}

#mge_right{
  width: 82%;
  height: 75%;
  margin: 1% 1%;
  background:{
    color: lightgreen;
  }
  float: left;
  word-wrap: break-word;
}

#mge_foot{
  float: left;
  word-wrap: break-word;
  width: 98%;
  height: 5%;
  margin: 1% auto;
  text-align: center;
  background:{
    color: lightgreen;
  }
}

#uname{
  width: 12%;
  height: 4%;
  margin: 7% 0 0 0;
  float: left;
}

#mge_logout{
  width: 10%;
  height: 4%;
  margin: 8% 0 0 0;
  float: left;
}