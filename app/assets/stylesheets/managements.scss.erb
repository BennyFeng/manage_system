h1{
  text-align: center;
}

#mge_head{
  float: left;
  width: 98%;
  height: 10%;
  margin: 0.5% auto;
  background:{
    color: lightgreen;
  }
}

#mge_left{
  width: 15%;
  height: 75%;
  margin: 0.5% 0;
  background:{
    color: #172244;
  }
  float: left;
  word-wrap: break-word;
  .sider{
    width: 95%;
    height: 7%;
    margin: 1% 0;
    line-height: 180%;
    color: white;
    font-size: 20px;
    display: block;
    text-decoration: none;
    
    cursor: pointer;
  }

  ul{
    width: 98%;
    margin: 5% 1%;
    list-style: none;
    color: white;
    display: none;
  }

  .sider:hover{
    background:{
      color:black;
    }
    border: 2px solid black;
  }
}

#mge_right{
  width: 82%;
  height: 75%;
  margin: 0.5% 1%;
  background:{
    color: lightgreen;
  }
  float: left;
  word-wrap: break-word;
}

#mge_foot{
  float: left;
  word-wrap: break-word;
  width: 98%;
  height: 5%;
  margin: 0.5% auto;
  text-align: center;
  background:{
    color: lightgreen;
  }
}

.uname{
  width: 18%;
  height: 40%;
  margin: 3% 0 0 0;
  float: left;
}

.mge_logout{
  width: 7%;
  height: 40%;
  margin: 3% 0 0 0;
  float: right;
}

.time{
  width: 20%;
  height: 40%;
  margin: 3% 0 0 5%;
  float: left;
}