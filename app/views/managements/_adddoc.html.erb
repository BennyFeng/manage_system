<div class="form">
  <%= form_for :doc, url: managements_path do |f| %>
    <p>
      员工号码: <%= f.text_field :emp_number  %>
    </p>

    <p>
      员工姓名: <%= f.text_field :emp_name  %>
    </p>

    <p>
      性别: <%= f.select(:emp_sex, [['男', 1], ['女', 2]])  %>
    </p>

    <p>
      出生日期: <%= f.date_field :emp_birth  %>
    </p>

    <p>
      身份证号码: <%= f.text_field :emp_card  %>
    </p>

    <p>
      联系电话: <%= f.telephone_field :emp_phone  %>
    </p>

    <p>
      现住址: <%= f.text_field :emp_address  %>
    </p>

    <p>
      <%= cookies[:hint] %>
    </p>

    <p id="login_btn">
      <%= f.submit "提交" %>
    </p>
  <% end %>
 </div>