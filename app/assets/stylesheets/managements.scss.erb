h1{
  text-align: center;
}

#mge_head{
  float: left;
  width: 98%;
  height: 10%;
  margin: 0.5% auto;
  background:{
    color: white;
  }
  font-size: 18px;
  a:link{
    text-decoration: none;
    color: black;
  }
  a:hover{
    text-decoration: underline;
    color: black;
  }
  a:visited{
    color: black;
  }
}

#mge_left{
  width: 15%;
  height: 75%;
  margin: 0.5% 0;
  background:{
    color: #172244;
  }
  color: white;
  float: left;
  word-wrap: break-word;
  .sider{
    width: 95%;
    height: 7%;
    margin: 1% 0;
    line-height: 180%;
    font-size: 20px;
    display: block;
    text-decoration: none;
    
    cursor: pointer;
  }
  a{
    color: white;
    text-decoration: none;
  }
  :hover{
    background:{
      color:black;
    }
    border: 2px solid black;
  }
}

#mge_right{
  width: 82%;
  height: 75%;
  margin: 0.5% 1%;
  background:{
    color: lightgreen;
  }
  float: left;
  word-wrap: break-word;
}

#mge_foot{
  float: left;
  word-wrap: break-word;
  width: 98%;
  height: 5%;
  margin: 0.5% auto;
  text-align: center;
  background:{
    color: lightgreen;
  }
}

.uname{
  width: 20%;
  height: 40%;
  margin: 3% 0 0 0;
  float: left;
}

.mge_logout{
  width: 7%;
  height: 40%;
  margin: 3% 0 0 6%;
  float: left;
}

#time{
  width: 30%;
  height: 40%;
  margin: 3% 0 0 0%;
  float: right;
}

.ance{
    width: 10%;
    height: 5%;
    margin: 1% 0.5%;
    line-height: 180%;
    font-size: 16px;
    display: block;
    text-decoration: none;
    text-align: center;
    background-color: gray;
    float: left;
}
.tb{
  width:99%;
  tr {
    td, th{
      width: 10%;
      height: 7%;
      border: 1px solid black;
      a:link{
        text-decoration: none;
        color: black;
      }
      a:hover{
        text-decoration: underline;
        color: black;
      }
      a:visited{
        color: black;
      }
    }
  }
}
.showtb{
  width:70%;
  height: 20%;
  margin: 10% auto;
  tr {
    td, th{
      width: 10%;
      height: 2%;
      border: 1px solid black;
    }
  }
}
#tips{
  width: 99%;
  height:7%;
  text-align: center;
}

.form{
  width: 26%;
  height: 60%;
  margin: 10% auto;
  div{
    margin: 5% auto;
    width: 90%;
    height: 60%;
    text-align: left;
  }
}
